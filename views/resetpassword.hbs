<form id="security-questions-form">
    <div>
        <p id="reset-username" data-username="{{{username}}}">
    Password reset for user: {{{username}}} (if it exists)
        </p>
    </div>
    <div class="content-wrapper">
        <div class="form-group">
            <label for="answer1">{{{securityQuestions.securityQn1}}}</label>
            <input 
                type="text" 
                id="answer1" 
                name="answer1" 
                placeholder="Enter your answer" 
                required 
                maxlength="100"
            >
        </div>

        <div class="form-group">
            <label for="answer2">{{{securityQuestions.securityQn2}}}</label>
            <input 
                type="text" 
                id="answer2" 
                name="answer2" 
                placeholder="Enter your answer" 
                required 
                maxlength="100"
            >
        </div>

        <button type="submit">Submit Answers</button>
    </div>
</form>
