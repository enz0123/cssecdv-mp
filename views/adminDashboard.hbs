{{!-- Page-specific JS --}}
<script>
  $(function() {
    // Tabs
    $('.admin-tab').on('click', function() {
      var target = $(this).data('tab');
      $('.admin-tab').removeClass('active');
      $(this).addClass('active');
      $('.admin-tab-panel').removeClass('active');
      $('#' + target).addClass('active');
    });

    // --- USER CREATION (Admin / Owner / Condo Bro) ---
    $('#admin-create-user-form').on('submit', function(e) {
      e.preventDefault();

      const username = $('#admin-create-username').val().trim();
      const password = $('#admin-create-password').val();
      const confirmPassword = $('#admin-create-confirm-password').val();
      const role = $('#admin-create-role').val();
      const securityQn1 = $('#admin-securityQuestion1').val();
      const securityQn2 = $('#admin-securityQuestion2').val();
      const securityAnswer1 = $('#admin-security-answer-1').val().trim();
      const securityAnswer2 = $('#admin-security-answer-2').val().trim();

      const $msg = $('#admin-create-user-message');
      $msg.removeClass('error success').text('');

      if (!username || !password || !confirmPassword) {
        $msg.addClass('error').text('Required fields must not be empty.');
        return;
      }
      if (password !== confirmPassword) {
        $msg.addClass('error').text('Passwords do not match.');
        return;
      }
      if (securityAnswer1.length > 100 || securityAnswer2.length > 100) {
        $msg.addClass('error').text('Answers to security questions must be less than 100 characters.');
        return;
      }

      const payload = {
        username: username,
        password: password,
        role: role,
        // default avatar and bio (you can tweak this)
        picture: 'images/gamer.png',
        bio: '',
        securityQn1: securityQn1,
        securityQn2: securityQn2,
        securityAnswer1: securityAnswer1,
        securityAnswer2: securityAnswer2
      };

      $.ajax({
        url: '/admin/users',
        method: 'POST',
        contentType: 'application/json',
        data: JSON.stringify(payload),
        success: function(res) {
          $msg.addClass('success').text(res.message || 'User created successfully.');
          $('#admin-create-user-form')[0].reset();
          $('#admin-create-role').val('Admin');
          loadAdminUsers(); // refresh list in Roles tab
        },
        error: function(xhr) {
          const message = xhr.responseJSON && xhr.responseJSON.message
            ? xhr.responseJSON.message
            : 'Error creating user.';
          $msg.addClass('error').text(message);
        }
      });
    });

    // --- ROLES & PERMISSIONS ---
    function loadAdminUsers() {
      const role = $('#admin-users-role-filter').val();
      const search = $('#admin-users-search').val().trim();

      const params = [];
      if (role) params.push('role=' + encodeURIComponent(role));
      if (search) params.push('search=' + encodeURIComponent(search));

      const url = '/admin/users' + (params.length ? ('?' + params.join('&')) : '');

      $.get(url, function(res) {
        const $tbody = $('#admin-users-table tbody');
        $tbody.empty();

        if (!res.users || res.users.length === 0) {
          $tbody.append('<tr><td colspan="4">No users found.</td></tr>');
          return;
        }

        res.users.forEach(function(u) {
          const createdAt = u.createdAt ? new Date(u.createdAt).toLocaleString() : '';
          const $row = $('<tr></tr>').attr('data-user-id', u._id);

          const $usernameCell = $('<td></td>').text(u.user || '');
          const $roleCell = $('<td></td>').text(u.role || 'Condo Bro');
          const $createdCell = $('<td></td>').text(createdAt);

          const $actionCell = $('<td></td>');
          const $select = $('<select class="admin-role-select"></select>');
          ['Admin', 'Owner', 'Condo Bro'].forEach(function(roleOpt) {
            const $opt = $('<option></option>')
              .val(roleOpt)
              .text(roleOpt);
            if (u.role === roleOpt) $opt.attr('selected', 'selected');
            $select.append($opt);
          });
          const $btn = $('<button type="button" class="admin-secondary-btn admin-update-role-btn">Save</button>');

          $actionCell.append($select).append(' ').append($btn);

          $row.append($usernameCell, $roleCell, $createdCell, $actionCell);
          $tbody.append($row);
        });
      }).fail(function() {
        $('#admin-users-message')
          .addClass('error')
          .text('Error fetching users.');
      });
    }

    $('#admin-users-refresh').on('click', function() {
      $('#admin-users-message').removeClass('error success').text('');
      loadAdminUsers();
    });

    // Handle role update click
    $('#admin-users-table').on('click', '.admin-update-role-btn', function() {
      const $row = $(this).closest('tr');
      const userId = $row.data('user-id');
      const newRole = $row.find('.admin-role-select').val();

      const $msg = $('#admin-users-message');
      $msg.removeClass('error success').text('');

      if (!userId) {
        $msg.addClass('error').text('Invalid user ID.');
        return;
      }

      $.ajax({
        url: '/admin/users/' + encodeURIComponent(userId) + '/role',
        method: 'PATCH',
        contentType: 'application/json',
        data: JSON.stringify({ newRole: newRole }),
        success: function(res) {
          $msg.addClass('success').text(res.message || 'Role updated successfully.');
          loadAdminUsers();
        },
        error: function(xhr) {
          const message = xhr.responseJSON && xhr.responseJSON.message
            ? xhr.responseJSON.message
            : 'Error updating role.';
          $msg.addClass('error').text(message);
        }
      });
    });

    // --- AUDIT LOGS: SECURITY ---
    function loadSecurityLogs() {
      const eventType = $('#log-eventType').val();
      const username = $('#log-username').val().trim();
      const route = $('#log-route').val().trim();
      const fromDate = $('#log-fromDate').val();
      const toDate = $('#log-toDate').val();

      const params = [];
      if (eventType) params.push('eventType=' + encodeURIComponent(eventType));
      if (username) params.push('username=' + encodeURIComponent(username));
      if (route) params.push('route=' + encodeURIComponent(route));
      if (fromDate) params.push('fromDate=' + encodeURIComponent(fromDate));
      if (toDate) params.push('toDate=' + encodeURIComponent(toDate));

      const url = '/admin/logs/security' + (params.length ? ('?' + params.join('&')) : '');

      $.get(url, function(res) {
        const $tbody = $('#admin-security-logs-table tbody');
        $tbody.empty();

        if (!res.logs || res.logs.length === 0) {
          $tbody.append('<tr><td colspan="5">No logs found.</td></tr>');
          return;
        }

        res.logs.forEach(function(log) {
          const time = log.createdAt ? new Date(log.createdAt).toLocaleString() : '';
          const userLabel = log.username || (log.userId && log.userId.user) || '';

          const $row = $('<tr></tr>');
          $row.append(
            $('<td></td>').text(time),
            $('<td></td>').text(log.eventType || ''),
            $('<td></td>').text(userLabel),
            $('<td></td>').text(log.route || ''),
            $('<td></td>').text(log.message || '')
          );
          $tbody.append($row);
        });
      }).fail(function() {
        const $tbody = $('#admin-security-logs-table tbody');
        $tbody.empty().append('<tr><td colspan="5">Error loading security logs.</td></tr>');
      });
    }

    $('#log-security-refresh').on('click', function() {
      loadSecurityLogs();
    });

    // --- AUDIT LOGS: AUTH ---
    function loadAuthLogs() {
      const username = $('#authlog-username').val().trim();
      const success = $('#authlog-success').val();

      const params = [];
      if (username) params.push('username=' + encodeURIComponent(username));
      if (success) params.push('success=' + encodeURIComponent(success));

      const url = '/admin/logs/auth' + (params.length ? ('?' + params.join('&')) : '');

      $.get(url, function(res) {
        const $tbody = $('#admin-auth-logs-table tbody');
        $tbody.empty();

        if (!res.attempts || res.attempts.length === 0) {
          $tbody.append('<tr><td colspan="4">No authentication logs found.</td></tr>');
          return;
        }

        res.attempts.forEach(function(attempt) {
          const time = attempt.loginAt ? new Date(attempt.loginAt).toLocaleString() : '';
          const user = attempt.userId && attempt.userId.user ? attempt.userId.user : '';
          const role = attempt.userId && attempt.userId.role ? attempt.userId.role : '';
          const successLabel = attempt.success ? 'Success' : 'Failed';

          const $row = $('<tr></tr>');
          $row.append(
            $('<td></td>').text(time),
            $('<td></td>').text(user),
            $('<td></td>').text(role),
            $('<td></td>').text(successLabel)
          );
          $tbody.append($row);
        });
      }).fail(function() {
        const $tbody = $('#admin-auth-logs-table tbody');
        $tbody.empty().append('<tr><td colspan="4">Error loading authentication logs.</td></tr>');
      });
    }

    $('#authlog-refresh').on('click', function() {
      loadAuthLogs();
    });

    // Initial loads
    loadAdminUsers();
    loadSecurityLogs();
    loadAuthLogs();
  });
</script>
