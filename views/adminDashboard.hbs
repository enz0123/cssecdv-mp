<div class="admin-page">
  <div class="admin-container">
    <h1 class="admin-title">Admin Dashboard</h1>
    <p class="admin-subtitle">
      Manage administrators, condo owners, Condo Bros, and audit trails from a single, secure dashboard.
    </p>

    {{!-- Top stats --}}
    <div class="admin-stats-row">
      <div class="admin-stat-card">
        <div class="admin-stat-label">Total Users</div>
        <div class="admin-stat-value">{{stats.totalUsers}}</div>
      </div>
      <div class="admin-stat-card">
        <div class="admin-stat-label">Admins</div>
        <div class="admin-stat-value">{{stats.adminCount}}</div>
      </div>
      <div class="admin-stat-card">
        <div class="admin-stat-label">Owners</div>
        <div class="admin-stat-value">{{stats.ownerCount}}</div>
      </div>
      <div class="admin-stat-card">
        <div class="admin-stat-label">Condo Bros</div>
        <div class="admin-stat-value">{{stats.clientCount}}</div>
      </div>
    </div>

    {{!-- Tabs --}}
    <div class="admin-tabs">
      <button class="admin-tab active" data-tab="tab-users">User Management</button>
      <button class="admin-tab" data-tab="tab-roles">Roles &amp; Permissions</button>
      <button class="admin-tab" data-tab="tab-logs">Audit Logs</button>
    </div>

    <div class="admin-tab-panels">

      {{!-- TAB 1: USER MANAGEMENT (Add Admin / Owner / Condo Bro) --}}
      <div id="tab-users" class="admin-tab-panel active">
        <div class="admin-card">
          <h2>Create Administrator / Owner / Condo Bro</h2>
          <p class="admin-card-subtitle">
            Use this form to create privileged accounts. Regular users can still sign up via the public Sign Up modal.
          </p>

          <form id="admin-create-user-form" class="admin-form">
            <div class="admin-form-row">
              <label>Username<span class="required">*</span></label>
              <input type="text" id="admin-create-username" required>
            </div>

            <div class="admin-form-row">
              <label>Password<span class="required">*</span></label>
              <input type="password" id="admin-create-password" required>
            </div>

            <div class="admin-form-row">
              <label>Confirm Password<span class="required">*</span></label>
              <input type="password" id="admin-create-confirm-password" required>
            </div>

            <div class="admin-form-row">
              <label>Role<span class="required">*</span></label>
              <select id="admin-create-role" required>
                <option value="Admin">Admin</option>
                <option value="Owner">Owner</option>
                <option value="Condo Bro">Condo Bro</option>
              </select>
            </div>

            <div class="admin-form-row">
              <label>Security Question 1<span class="required">*</span></label>
              <select id="admin-securityQuestion1">
                <option value="1">What was the name of your first pet?</option>
                <option value="2">What street did you grow up on?</option>
                <option value="3">What was your childhood nickname?</option>
                <option value="4">What was your first concert?</option>
                <option value="5">What was the first movie you saw in a theatre?</option>
                <option value="6">What was the first car you rode in?</option>
              </select>
            </div>

            <div class="admin-form-row">
              <label>Answer to Security Question 1<span class="required">*</span></label>
              <input type="text" id="admin-security-answer-1" maxlength="100" required>
            </div>

            <div class="admin-form-row">
              <label>Security Question 2<span class="required">*</span></label>
              <select id="admin-securityQuestion2">
                <option value="1">What was the name of your first pet?</option>
                <option value="2">What street did you grow up on?</option>
                <option value="3">What was your childhood nickname?</option>
                <option value="4">What was your first concert?</option>
                <option value="5">What was the first movie you saw in a theatre?</option>
                <option value="6">What was the first car you rode in?</option>
              </select>
            </div>

            <div class="admin-form-row">
              <label>Answer to Security Question 2<span class="required">*</span></label>
              <input type="text" id="admin-security-answer-2" maxlength="100" required>
            </div>

            <div class="admin-form-actions">
              <button type="submit" class="admin-primary-btn">Create Account</button>
            </div>
          </form>

          <div id="admin-create-user-message" class="admin-feedback"></div>
        </div>
      </div>

      {{!-- TAB 2: ROLES & PERMISSIONS --}}
      <div id="tab-roles" class="admin-tab-panel">
        <div class="admin-card">
          <h2>Roles &amp; Permissions</h2>
          <p class="admin-card-subtitle">
            View all users, filter them by role, and update their roles in real time.
          </p>

          <div class="admin-filter-row">
            <div class="admin-filter-group">
              <label>Role Filter</label>
              <select id="admin-users-role-filter">
                <option value="">All</option>
                <option value="Admin">Admin</option>
                <option value="Owner">Owner</option>
                <option value="Condo Bro">Condo Bro</option>
              </select>
            </div>
            <div class="admin-filter-group">
              <label>Search</label>
              <input type="text" id="admin-users-search" placeholder="Username or email">
            </div>
            <div class="admin-filter-group">
              <button id="admin-users-refresh" class="admin-secondary-btn">Apply Filters</button>
            </div>
          </div>

          <div class="admin-table-wrapper">
            <table class="admin-table" id="admin-users-table">
              <thead>
                <tr>
                  <th>Username</th>
                  <th>Role</th>
                  <th>Created</th>
                  <th style="width: 180px;">Change Role</th>
                </tr>
              </thead>
              <tbody>
                {{!-- Filled by JS --}}
              </tbody>
            </table>
          </div>

          <div id="admin-users-message" class="admin-feedback"></div>
        </div>
      </div>

      {{!-- TAB 3: AUDIT LOGS --}}
      <div id="tab-logs" class="admin-tab-panel">
        <div class="admin-card">
          <h2>Security Logs</h2>
          <p class="admin-card-subtitle">
            View validation failures, access control issues, lockouts, and admin actions.
          </p>

          <div class="admin-filter-row">
            <div class="admin-filter-group">
              <label>Event Type</label>
              <select id="log-eventType">
                <option value="">All</option>
                <option value="VALIDATION_FAILURE">Validation Failure</option>
                <option value="ACCESS_CONTROL_FAILURE">Access Control Failure</option>
                <option value="AUTH_LOCKOUT">Auth Lockout</option>
                <option value="ADMIN_ACTION">Admin Action</option>
              </select>
            </div>
            <div class="admin-filter-group">
              <label>Username</label>
              <input type="text" id="log-username" placeholder="e.g. niccolo">
            </div>
            <div class="admin-filter-group">
              <label>Route</label>
              <input type="text" id="log-route" placeholder="/login, /edit-profile">
            </div>
          </div>

          <div class="admin-filter-row">
            <div class="admin-filter-group">
              <label>From</label>
              <input type="date" id="log-fromDate">
            </div>
            <div class="admin-filter-group">
              <label>To</label>
              <input type="date" id="log-toDate">
            </div>
            <div class="admin-filter-group">
              <button id="log-security-refresh" class="admin-secondary-btn">Filter Security Logs</button>
            </div>
          </div>

          <div class="admin-table-wrapper">
            <table class="admin-table" id="admin-security-logs-table">
              <thead>
                <tr>
                  <th>Time</th>
                  <th>Event Type</th>
                  <th>User</th>
                  <th>Route</th>
                  <th>Message</th>
                </tr>
              </thead>
              <tbody>
                {{!-- Filled by JS --}}
              </tbody>
            </table>
          </div>
        </div>

        <div class="admin-card" style="margin-top: 24px;">
          <h2>Authentication Logs</h2>
          <p class="admin-card-subtitle">
            View recent login attempts (success and failed).
          </p>

          <div class="admin-filter-row">
            <div class="admin-filter-group">
              <label>Username</label>
              <input type="text" id="authlog-username" placeholder="e.g. niccolo">
            </div>
            <div class="admin-filter-group">
              <label>Result</label>
              <select id="authlog-success">
                <option value="">All</option>
                <option value="true">Success</option>
                <option value="false">Failed</option>
              </select>
            </div>
            <div class="admin-filter-group">
              <button id="authlog-refresh" class="admin-secondary-btn">Filter Auth Logs</button>
            </div>
          </div>

          <div class="admin-table-wrapper">
            <table class="admin-table" id="admin-auth-logs-table">
              <thead>
                <tr>
                  <th>Time</th>
                  <th>User</th>
                  <th>Role</th>
                  <th>Success</th>
                </tr>
              </thead>
              <tbody>
                {{!-- Filled by JS --}}
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div> <!-- /admin-tab-panels -->
  </div>
</div>

